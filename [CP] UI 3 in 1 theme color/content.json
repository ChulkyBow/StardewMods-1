{
    "Format": "1.19.0",
	
	"ConfigSchema": {
		"UI theme Color": {
			"AllowValues": "Pink, Choco, Paddlepop" , "Default": "Pink"  
			}
	},
	"DynamicTokens": [
		{
         "Name": "Theme",
         "Value": "Pink",
		 "When": {
            "UI theme Color": "Pink"
			}
		},
		{
         "Name": "Theme",
         "Value": "Brown",
		 "When": {
            "UI theme Color": "Choco"
			}
		},
		{
         "Name": "Theme",
         "Value": "Paddlepop",
		 "When": {
            "UI theme Color": "Paddlepop"
			}
		}
	],
	"Changes": [

////For English ////

        // LooseSprites replacements

        {
            "Action": "EditImage",
            "Target": "LooseSprites/Billboard, LooseSprites/chatbox, LooseSprites/DialogBoxGreen, LooseSprites/JunimoNote, LooseSprites/letterBG, LooseSprites/textBox, LooseSprites/daybg, LooseSprites/nightbg",
            "FromFile": "assets/EN/{{Theme}}/{{Target}}.png"
        },
        {
            "Action": "EditImage",
            "Target": "Maps/MenuTiles",
            "FromFile": "assets/EN/{{Theme}}/{{Target}}.png"
        },

        // Minigames replacements 

        {
            "Action": "EditImage",
            "Target": "Minigames/TitleButtons",
            "FromFile": "assets/EN/{{Theme}}/{{Target}}.png"
        },
		
        // Begin cursors edits

        {
            "LogName": "Cursors",
            "Action": "EditImage",
            "Target": "LooseSprites/Cursors, LooseSprites/Cursors2",
            "FromFile": "assets/EN/{{Theme}}/{{Target}}.png",
            "PatchMode": "Overlay"
        },
		// mouse edits
		{
			"LogName": "Mouse",
			"Action": "EditImage",
			"Target": "LooseSprites/Cursors",
			"FromFile": "assets/EN/LooseSprites/mouse.png",
			"FromArea": { "X": 0, "Y": 0, "Width": 128, "Height": 32 },
			"ToArea": { "X": 0, "Y": 0, "Width": 128, "Height": 32 }
		},
    // for Android User
		{
			"Action": "EditImage",
			"Target": "LooseSprites/MobileAtlas_manually_made",
			"FromFile": "assets/EN/{{Theme}}/{{Target}}.png"
		},
////For THAI ////

        // LooseSprites replacements

        {
            "Action": "EditImage",
            "Target": "LooseSprites/Billboard, LooseSprites/chatbox, LooseSprites/DialogBoxGreen, LooseSprites/JunimoNote, LooseSprites/letterBG, LooseSprites/textBox, LooseSprites/daybg, LooseSprites/nightbg",
            "FromFile": "assets/TH/{{Theme}}/{{Target}}.png",
			"When": { "HasMod:TranslatorArmy.ModTH": true }
        },
        {
            "Action": "EditImage",
            "Target": "Maps/MenuTiles",
            "FromFile": "assets/TH/{{Theme}}/{{Target}}.png",
			"When": { "HasMod:TranslatorArmy.ModTH": true }
        },

        // Minigames replacements 

        {
            "Action": "EditImage",
            "Target": "Minigames/TitleButtons",
            "FromFile": "assets/TH/{{Theme}}/{{Target}}.png",
			"When": {"HasMod:TranslatorArmy.ModTH": true }
        },
		
        // Begin cursors edits

        {
            "LogName": "Cursors",
            "Action": "EditImage",
            "Target": "LooseSprites/Cursors, LooseSprites/Cursors2",
            "FromFile": "assets/TH/{{Theme}}/{{Target}}.png",
            "PatchMode": "Overlay",
			"When": {"HasMod:TranslatorArmy.ModTH": true }
        },
		// mouse edits
		{
			"LogName": "Mouse",
			"Action": "EditImage",
			"Target": "LooseSprites/Cursors",
			"FromFile": "assets/TH/LooseSprites/mouse.png",
			"FromArea": { "X": 0, "Y": 0, "Width": 128, "Height": 32 },
			"ToArea": { "X": 0, "Y": 0, "Width": 128, "Height": 32 }
		},
		// for Android User
		{
			"Action": "EditImage",
			"Target": "LooseSprites/MobileAtlas_manually_made",
			"FromFile": "assets/TH/{{Theme}}/{{Target}}.png"
		},
    ]
}